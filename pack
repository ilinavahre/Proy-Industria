SOURCE .
TARGET redist
ENV prod

ECHO {clr 93} Building ... {clr 0}
    EXEC pnpm build

ECHO {clr 93} Copying files ... {clr 0}
	RMDIR {TARGET}
	MKDIR {TARGET}
	r0 {SOURCE}/api
	DIRCOPY {TARGET}/api
	r0 {SOURCE}/dist
	DIRCOPY {TARGET}

ECHO {clr 93} Configuring ... {clr 0}
	r0 {ENV}
	WRITE {TARGET}/api/rose-env

ECHO {clr 93} Cleaning up ... {clr 0}
	RMDIR {TARGET}/api/@local
	RMDIR {TARGET}/api/logs
	RMDIR {TARGET}/api/volatile
	RMDIR {TARGET}/api/storage/products
	RMDIR {TARGET}/api/storage/users
	DEL {TARGET}/api/composer.lock
	DEL {TARGET}/api/composer.json

ECHO {clr 93} Finished {clr 0}
