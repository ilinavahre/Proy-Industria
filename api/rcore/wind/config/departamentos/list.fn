
(sentinel::privilege-required "Administrador, Recursos Humanos")

(call "@filters")
(call "pagination")

(set list (db::table `
    SELECT
        x.department_id id,
        x.created,
        x.is_visible,
        x.name,
		x.short

    FROM ##departments x

    WHERE {filters}

    ORDER BY {sort} {order}
    LIMIT {offset}, {count}
`))

(for i (list)
    (set i.s_created (locale::datetime (i.created)))
)
